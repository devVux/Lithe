{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vendor/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "win-base",
      "inherits": "base",
      "hidden": true,
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" },
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang.exe",
        "CMAKE_CXX_COMPILER": "clang++.exe",
        "LITHE_RENDERER": "OpenGL"
      }
    },
    {
      "name": "win-debug",
      "inherits": "win-base",
      "displayName": "Windows Debug",
      "binaryDir": "${sourceDir}/out/build/windows/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-release",
      "inherits": "win-base",
      "displayName": "Windows Release",
      "binaryDir": "${sourceDir}/out/build/windows/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "vs2022-base",
      "inherits": "base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
	  "cacheVariables": {
		"CMAKE_C_COMPILER": "cl.exe",
		"CMAKE_CXX_COMPILER": "cl.exe"
	  }
    },
    {
      "name": "vs2022-debug",
      "inherits": "vs2022-base",
      "displayName": "VS 2022 Debug",
      "binaryDir": "${sourceDir}/out/build/vs2022/debug"
    },
    {
      "name": "vs2022-release",
      "inherits": "vs2022-base",
      "displayName": "VS 2022 Release",
      "binaryDir": "${sourceDir}/out/build/vs2022/release"
    },
    {
      "name": "macos-base",
      "inherits": "base",
      "hidden": true,
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" },
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-osx"
      },
	  "cacheVariables": {
		"CMAKE_C_COMPILER": "clang",
		"CMAKE_CXX_COMPILER": "clang++",
		"CMAKE_OBJCXX_COMPILER": "clang++",
		"CMAKE_OBJC_COMPILER": "clang",
		"LITHE_RENDERER": "Metal",
		"CMAKE_OBJCXX_COMPILE_OBJECT": "<CMAKE_OBJCXX_COMPILER> <DEFINES> <INCLUDES> <FLAGS> -o <OBJECT> -c <SOURCE>"
	  }
    },
    {
      "name": "macos-debug",
      "inherits": "macos-base",
      "displayName": "macOS Debug",
      "binaryDir": "${sourceDir}/out/build/macos/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-release",
      "inherits": "macos-base",
      "displayName": "macOS Release",
      "binaryDir": "${sourceDir}/out/build/macos/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-base",
      "inherits": "base",
      "hidden": true,
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" },
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "LITHE_RENDERER": "OpenGL"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "linux-base",
      "displayName": "Linux Debug",
      "binaryDir": "${sourceDir}/out/build/linux/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux-base",
      "displayName": "Linux Release",
      "binaryDir": "${sourceDir}/out/build/linux/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "configurePreset": "win-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "configurePreset": "win-release",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "displayName": "Visual Studio 2022 Debug",
      "configurePreset": "vs2022-debug",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "displayName": "Visual Studio 2022 Release",
      "configurePreset": "vs2022-release",
      "configuration": "Release"
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "configurePreset": "macos-debug",
      "configuration": "Debug"
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "configurePreset": "macos-release",
      "configuration": "Release"
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "configurePreset": "linux-debug",
      "configuration": "Debug"
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "configurePreset": "linux-release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ci-tests-windows",
      "configurePreset": "win-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "ci-tests-macos",
      "configurePreset": "macos-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "ci-tests-linux",
      "configurePreset": "linux-debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
